<% include pageHeader %>

<% include pageNavbar %>

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-sm-10 space-before-40">
            <div class="card">
                <div class="card-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <h1 class="display-4" >
                                    <%= res.tender.title %>
                                </h1>
                            </div>
                            <div class="col-sm-6 text-right">
                                <span class="badge badge-info h6">BSc</span>
                                <span class="badge badge-info h6">Koli</span>
                                <span class="badge badge-info h6">Heti</span>
                                <% if ( req.isAuthenticated() ) { %>
                                    <br>
                                    <% if ( req.session.passport.user.permission > 2 ) { %>
                                        <a class="btn btn-outline-danger btn-sm" href="/tender/<%= res.tender._id %>/del">Delete</a>
                                    <% } %>
                                    <% if ( req.session.passport.user.permission > 0 ) { %>
                                        <a class="btn btn-outline-secondary btn-sm" href="/tender/<%= res.tender._id %>/mod">Edit</a>
                                    <% } %>
                                    <% if ( req.session.passport.user.permission > 0 ) { %>
                                        <a class="btn btn-outline-secondary btn-sm" href="/tender/<%= res.tender._id %>/part">Parts</a>
                                    <% } %>
                                    <a class="btn btn-outline-secondary btn-sm" href="/app/add/<%= res.tender._id %>">Submit</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-4">
                                <img class="card-img-top" src="http://via.placeholder.com/259x180" alt="Card image cap">
                            </div>
                            <div class="col-sm-8">
                                <p class="lead text-justify">
                                    <%= res.tender.description %>
                                </p>
                            </div>
                            <div class="col-sm-6 space-before-20">
                                Attachment:
                                <a href="">datasheet_template</a>,
                                <a href="">tender_description</a>
                            </div>
                            <div class="col-sm-3 text-center space-before-20">
                                <h6>
                                    <%= res.tender.publisher.name %>
                                </h6>
                            </div>
                            <div class="col-sm-3 text-center space-before-20">
                                <h6>
                                    <%= res.tender.start_datetime %> - <%= res.tender.end_datetime %>
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<% include pageFooter %>