    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item <% if ( req.originalUrl == "/" && req.originalUrl.length == 1 ) { %> active <% } %> ">

                <a class="nav-link" href="/" >
                    <%= i18n.HOME.ITEM %>
                </a>
            </li>
            <li class="nav-item">
                <div class="btn-group dropdown">
                    <a class="nav-link text-right <% if ( req.originalUrl.indexOf( '/news/all' ) > -1 ) { %> active <% } %> " href="/news/all">
                        <%= i18n.NEWS.MENU.ITEM %>
                    </a>

                    <% if ( req.isAuthenticated() && req.session.passport.user.permission > 0 ) { %>
                        <a class="text-left nav-link dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/news/add"><%= i18n.NEWS.MENU.NEW %></a>
                        </div>
                    <% } %>

                </div>
            </li>
            <li class="nav-item">
                <div class="btn-group dropdown">
                    <a class="nav-link text-right  <% if ( req.originalUrl.indexOf( '/tender/active' ) > -1 ) { %> active <% } %>" href="/tender/active">
                        <%= i18n.TENDERS.MENU.ITEM %>
                    </a>

                    <% if ( req.isAuthenticated() && req.session.passport.user.permission > 0 ) { %>
                        <a class="text-left nav-link dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/tender/all"><%= i18n.TENDERS.MENU.ALL %></a>
                            <a class="dropdown-item" href="/tender/add"><%= i18n.TENDERS.MENU.NEW %></a>
                        </div>
                    <% } %>
                </div>
            </li>

            <% if ( req.isAuthenticated() && req.session.passport.user.permission > 0 ) { %>
