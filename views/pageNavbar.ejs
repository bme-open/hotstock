                <li class="nav-item <% if ( req.originalUrl.indexOf( '/user/all' ) > -1 ) { %> active <% } %>">
                    <a class="nav-link" href="/user/all">
                        <%= i18n.USERS.MENU.ITEM %>
                    </a>
