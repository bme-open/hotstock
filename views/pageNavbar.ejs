                        </a>
                        <a class="text-left nav-link dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href=""><%= i18n.APPLICATIONS.MENU.UNSCORED %></a>
                        </div>
                    </div>
                </li>
            <% } %>

