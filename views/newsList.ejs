<% include pageHeader %>

<% include pageNavbar %>

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-sm-10">
            <div class="container space-before-10">
                <div class="row">
                    <div class="col-sm-5 space-before-20">
                        <h1 class="display-4">All news</h1>
                    </div>
                    <div class="col-sm-7 text-right space-before-10">
                        <button type="button" class="btn btn-info space-before-10 btn-sm">BSc</button>
                        <button type="button" class="btn btn-outline-info space-before-10 btn-sm">Koli</button>
                        <button type="button" class="btn btn-outline-info space-before-10 btn-sm">Heti</button>
                    </div>
                </div>
            </div>
            <div class="space-before-10"></div>

            <% for( var i = 0; i < res.newses.length; i++ ){ %>

                <% if( i % 3 === 0 ) { %>
                <div class="card-deck space-before-20">
                <% } %>

                    <div class="card card-link">
                        <a href="/news/<%= res.newses[i]._id %>">
                            <img class="card-img-top" src="http://via.placeholder.com/259x180" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-title">
                                    <span class="h5"><%= res.newses[i].title %></span>
                                    <span class="badge badge-info h6">BSc</span>
                                    <span class="badge badge-info h6">Koli</span>
                                    <span class="badge badge-info h6">Heti</span>
                                </p>
                                <p class="card-text short-description"><%= res.newses[i].short_description %></p>
                                <p class="card-text"><small class="text-muted"><%= res.newses[i].publish_datetime %></small></p>
                            </div>
                        </a>
                    </div>

                <% if( i % 3 === 2 ) { %>
                </div>
                <% } %>
            <% } %>

            <% if ( (res.newses.length-1) % 3 !== 2 ) { %>
                <% for ( var j = 0; j < 3 - (res.newses.length % 3); j++ ) { %>

                    <div class="card card-link">
                    </div>

                <% } %>

                </div>
            <% } %>

            <nav aria-label="Page navigation example" class="space-before-20">
                <ul class="pagination d-flex justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


    </div>
</div>

<% include pageFooter %>
