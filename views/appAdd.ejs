<% include pageHeader %>

<% include pageNavbar %>

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-sm-10 space-before-40">
            <div class="card">
                <div class="card-header">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <a class="h3 display-4" href="tender_description.html"><%= res.tpl.tender.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <% res.tpl.tenderParts.forEach( function (tender_part) { %>
                        <div class="container">
                            <div class="row space-before-10">

                                <div class="col-sm-5">
                                    <div class="d-flex justify-content-start">
                                        <div class="p-2 align-self-center">
                                            <h5>
                                                <strong data-toggle="tooltip" data-placement="top" title="<%= tender_part.description %>">
                                                    <%= tender_part.title %>
                                                </strong>
                                            </h5>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-5">
                                    <div class="d-flex justify-content-start">
                                        <div class="p-2 align-self-center">
                                            <h5>
                                                <% if ( tender_part.type == 1 ) { %>
                                                    <input>
                                                <% } %>

                                                <% if ( tender_part.type == 3 ) { %>
                                                    <label class="col-sm-4 col-form-label" for="exampleFormControlFile1">File input</label>
                                                    <input type="file" class="col-sm-8  form-control-file" id="exampleFormControlFile1" disabled>
                                                <% } %>

                                            </h5>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% if ( tender_part.type == 2 ) { %>
                        <div>
                            <textarea></textarea>
                        </div>
                        <% } %>

                        <%  }); %>

                    </li>

                    <li class="list-group-item text-center">
                        <button type="button" class="btn btn-info">Send</button>
                    </li>

                </ul>
            </div>
        </div>

    </div>
</div>

<% include pageFooter %>